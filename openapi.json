{
  "openapi": "3.0.1",
  "info": {
    "title": "Leonardo API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://leonardo-reparado.onrender.com"
    }
  ],
  "paths": {
    "/leonardo": {
      "get": {
        "operationId": "consultarMetricasSENAsoft",
        "summary": "Consulta métricas de SENAsoft según la pregunta (1-6)",
        "parameters": [
          {
            "name": "pregunta",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["1", "2", "3", "4", "5", "6"]
            },
            "description": "Número de la pregunta a consultar"
          }
        ],
        "responses": {
          "200": {
            "description": "Resultado de la métrica solicitada"
          },
          "400": {
            "description": "Pregunta no válida"
          }
        }
      }
    }
  }
}