{
  "openapi": "3.1.0",
  "info": { "title": "SENASoft Metrics API", "version": "2.0.0" },
  "servers": [
    { "url": "https://senasoft-core-dev-h2erabc0hhbcg7ee.eastus2-01.azurewebsites.net" }
  ],
  "paths": {
    "/metrics/scalar": {
      "get": {
        "operationId": "getScalarData",
        "summary": "Obtener métricas escalares de SENASoft",
        "responses": {
          "200": {
            "description": "Lista de métricas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                      "description": { "type": "string" },
                      "value": { "type": ["number", "string", "null"] }
                    },
                    "required": ["description", "value"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/leonardo": {
      "get": {
        "operationId": "consultarMetricasSENASoft",
        "summary": "Consulta métricas según la pregunta 1-6",
        "parameters": [
          {
            "name": "pregunta",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["1", "2", "3", "4", "5", "6"]
            },
            "description": "Número de la pregunta a consultar"
          }
        ],
        "responses": {
          "200": {
            "description": "Datos reales",
            "content": {
              "application/json": {
                "schema": { "type": "array" }
              }
            }
          },
          "400": {
            "description": "Pregunta no válida"
          }
        }
      }
    }
  }
}